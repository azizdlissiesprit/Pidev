{% extends 'base.html.twig' %}

{% block title %}Quiz home{% endblock %}

{% block body %}
    <h1 class="">Welcome to the Homepage quiz</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date_creation</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quiz in quizs %}
            <tr>
                <td>{{ quiz.id }}</td>
                <td>{{ quiz.titre }}</td>
                <td>{{ quiz.description }}</td>
                <td>{{ quiz.dateCreation ? quiz.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quiz.datedebut ? quiz.datedebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quiz.datefin ? quiz.datefin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quiz.statut }}</td>
                <td>
                    <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}">show</a>
                    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_quiz_new') }}">Create new</a>
{% endblock %}