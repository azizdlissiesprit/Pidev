{% extends 'base.html.twig' %}

{% block title %}Select Your Interests{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Select Your Interests</h1>
    
    {# Form to select tags (interests) using checkboxes #}
    <form method="post" action="{{ path('app_home_interests') }}" class="mb-4">
        {% for tag in allTags %}
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="tags[]" id="tag_{{ tag.id }}" value="{{ tag.id }}"
                    {% if tag.id in selectedTags %} checked {% endif %}>
                <label class="form-check-label" for="tag_{{ tag.id }}">
                    {{ tag.name }}
                </label>
            </div>
        {% endfor %}
        <button type="submit" class="btn btn-primary mt-2">Filter Posts</button>
    </form>

    <h2>Posts Based on Your Interests</h2>

    {% if posts is not empty %}
        {% for post in posts %}
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">{{ post.title }}</h2>
                    <p class="card-text">{{ post.content }}</p>

                    {# Display Tags for this Post #}
                    {% if post.tags|length > 0 %}
                        <h5>Tags:</h5>
                        <ul class="list-inline">
                            {% for tag in post.tags %}
                                <li class="list-inline-item">
                                    <span class="badge bg-secondary">{{ tag.name }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>No tags available.</p>
                    {% endif %}

                    {# Display Comments #}
                    <h4>Comments:</h4>
                    {% if post.comments|length > 0 %}
                        {% for comment in post.comments %}
                            <div class="mb-2">
                                <p>{{ comment.content }}</p>
                                <small class="text-muted">Posted on: {{ comment.createdAt|date('Y-m-d H:i') }}</small>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p>No comments yet.</p>
                    {% endif %}

                    {# Comment Form #}
                    <h5>Leave a comment:</h5>
                    {{ form_start(forms[post.id], {'action': path('app_comment_new')}) }}
                        {{ form_row(forms[post.id].content, {
                            'attr': {
                                'class': forms[post.id].content.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control',
                                'placeholder': 'Write your comment...',
                                'required': 'required',
                                'minlength': '5',
                                'maxlength': '500',
                                'pattern': '[a-zA-Z0-9 ]*'
                            }
                        }) }}
                        {% if forms[post.id].content.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {% for error in forms[post.id].content.vars.errors %}
                                    <p>{{ error.message }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                        <input type="hidden" name="post_id" value="{{ post.id }}">
                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                    {{ form_end(forms[post.id]) }}
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p>No posts match your interests.</p>
    {% endif %}
</div>

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Function to ensure the first letter of the content is uppercase
            const commentInput = document.querySelector('textarea[name="comment[content]"]');

            if (commentInput) {
                commentInput.addEventListener('input', function() {
                    // Capitalize the first letter of the input value
                    let currentValue = commentInput.value;
                    if (currentValue.length > 0) {
                        commentInput.value = currentValue.charAt(0).toUpperCase() + currentValue.slice(1);
                    }
                });
            }
        });
    </script>
{% endblock %}
{% endblock %}
