{% extends 'base.html.twig' %}

{% block title %}Leçons de {{ cour.titre }}{% endblock %}

{% block body %}
    <div class="container">
        <h2>Leçons du cours: {{ cour.titre }}</h2>

        {% if lessons is empty %}
            <p>Aucune leçon disponible pour ce cours.</p>
        {% else %}
            <ul>
                {% for lesson in lessons %}
                    <li>
                        <h3>{{ lesson.titre }}</h3>
                        <p>{{ lesson.description }}</p>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <a href="{{ path('app_cours_index') }}">⬅ Retour aux cours</a>
    </div>
{% endblock %}
